<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To Do List -Node.js</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <section class="row py-5 text-center container justify-content-center">
    <div class="col-sm-6 card text-center ">
      <div class="card-body ">
        <h2 class="card-title mb-3">To-Do App</h2>

        <form action="/new-todo-list" method="POST">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="name" name="title" required>
            <label for="floatingInput">Name of Task</label>
          </div>

          <div class="row">
            <div class="col">
              <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example"
                  name="category" required>
                  <option selected>Open this select menu</option>
                  <option value="Personal">Personal</option>
                  <option value="Work">Work</option>
                  <option value="School">School</option>
                  <option value="Other">Other</option>
                </select>
                <label for="floatingPassword">Category</label>
              </div>
            </div>
            <div class="col">
              <div class="form-floating">
                <input type="date" class="form-control" id="floatingPassword" placeholder="dd/mm/yyyy" name="date"
                  required>
                <label for="floatingPassword">Due Date</label>
              </div>
            </div>
          </div>

          <div class="mt-3 ">
            <button type="submit" class="btn btn-primary">Add Task</button>
          </div>  <br>
          <div class="col-12 container  ">
            <% for(let i of todo_list){%>
              <div class="alert alert-warning alert-dismissible fade show text-center " role="alert">
                <input class="form-check-input float-start" type="checkbox" onclick="myFunction('<%=i._id%>')">
                
                <strong id="<%=i._id%>" class="col-auto float-lg-start">
                  <%= i.title %>
                </strong>
                <%= i.status %>
                  <a type="button" class="btn btn-danger float-end m-auto" href="/delete-list/?id=<%=i._id%>" aria-label="Delete Task"> Delete Task</a>
              </div>
              <%}%>
          </div>
        </form>
      </div>
    </div>

    
  </section>

  <script src="/home.js"></script>
</body>

</html>